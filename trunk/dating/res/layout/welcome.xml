<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    android:id="@+id/widget125"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffafa"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ViewFlipper android:id="@+id/flipper"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:flipInterval="2000"
                 android:layout_marginBottom="10dip" >
        <TextView
            android:id="@+id/widget126"
            android:layout_width="fill_parent"
            android:layout_height="51px"
            android:text="Welcome"
            android:textSize="22sp"            
            android:textStyle="bold"
            android:textColor="#4b0082"
            android:textAlign="center"
            android:layout_x="0px"
            android:layout_y="2px">
        </TextView>
        <TextView
            android:id="@+id/widget124"
            android:layout_width="fill_parent"
            android:layout_height="51px"
            android:text="Get your DreamDate closer to you !!! "
            android:textSize="16sp"            
            android:textStyle="bold"
            android:textColor="#4b0082"
            android:textAlign="center"
            android:layout_x="0px"
            android:layout_y="2px">
        </TextView>
    </ViewFlipper>
    <TextView
        android:id="@+id/widget127"
        android:layout_width="315px"
        android:layout_height="149px"
        android:text="Are you looking for a serious relationship possibly leading to marriage? Or are you after a casual partner and you'll  see where it leads? Or perhaps you just want some uncomplicated fun. Think about how you will write your personal profile and your hopes for a partner. Then write  about what you are looking  for in a potential dating match. You could just  create a profile, partner profile and wait for the alerts from the dating service. Who knows, you could get lucky and it might work out first time."
        android:textSize="12sp"
        android:textColor="#4b0082"
        android:layout_x="0px"
        android:layout_y="53px">
    </TextView>
    <TextView
        android:id="@+id/widget128"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate Dating Service, and start connecting with other singles for free."
        android:textSize="13sp"
        android:textColor="#4b0082"
        android:textAlign="center"
        android:layout_x="0px"
        android:layout_y="195px">
    </TextView>
    <TextView
        android:id="@+id/widget128"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wish you all success !!!"
        android:textSize="15sp"
        android:textColor="#4b0082"
        android:textAlign="center"
        android:layout_x="80px"
        android:layout_y="235px">
    </TextView>
    <TextView
        android:id="@+id/widget208"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on menu to Get Started Now !....."
        android:layout_x="40px"
        android:layout_y="275px"/>
    <ImageView
        android:id="@+id/widget27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rose"
        android:layout_x="125px"
        android:layout_y="320px">
    </ImageView>
    </AbsoluteLayout>
    